# -*- mode: shell-script -*-
# User-defined aliases

# sudo hack to make sure sudo plays nicely with other aliases
alias sudo="sudo "

# system extensions
alias dnf="dnf --assumeyes"

# coreutils extensions
alias l="ls -lth"
alias ll="ls -ltha"

# git
alias g="git"
alias revc="git rev-list HEAD --count"

# docker
alias docker-compose="docker compose"

